{
  "name": "stub-api-server",
  "version": "0.6.12",
  "description": "Stub REST api with fake JSON",
  "main": "dist/src/index.js",
  "types": "dist/src/index.d.ts",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/jgiovaresco/stub-api-server.git"
  },
  "scripts": {
    "build": "tsc",
    "lint": "yarn lint:eslint && yarn lint:commit && yarn lint:prettier",
    "lint:commit": "commitlint --from=$( git rev-list --tags --max-count=1 )",
    "lint:eslint": "eslint --ext ts .",
    "lint:prettier": "prettier -l {examples,src,test}/**/*",
    "lint:prettier:fix": "prettier --write {examples,src,test}/**/*",
    "prepublishOnly": "yarn build",
    "release": "semantic-release",
    "test": "jest --color --detectOpenHandles",
    "test:cov": "yarn test --coverage"
  },
  "commitlint": {
    "extends": [
      "@commitlint/config-conventional"
    ],
    "rules": {
      "body-max-line-length": [
        0
      ]
    }
  },
  "lint-staged": {
    "*.{ts}": [
      "yarn eslint --fix",
      "prettier --write"
    ],
    "*.{js,json,md}": [
      "prettier --write"
    ]
  },
  "devDependencies": {
    "@commitlint/cli": "17.1.2",
    "@commitlint/config-conventional": "17.1.0",
    "@semantic-release/changelog": "6.0.1",
    "@semantic-release/commit-analyzer": "9.0.2",
    "@semantic-release/git": "10.0.1",
    "@semantic-release/github": "8.0.6",
    "@semantic-release/npm": "9.0.1",
    "@semantic-release/release-notes-generator": "10.0.3",
    "@types/bluebird": "3.5.37",
    "@types/chance": "1.1.3",
    "@types/hapi__hapi": "20.0.13",
    "@types/jest": "29.2.0",
    "@types/lodash": "4.14.186",
    "@types/supertest": "2.0.12",
    "@typescript-eslint/eslint-plugin": "5.40.1",
    "@typescript-eslint/parser": "5.40.1",
    "chance": "1.1.9",
    "conventional-changelog-conventionalcommits": "5.0.0",
    "eslint": "8.26.0",
    "eslint-config-prettier": "8.5.0",
    "eslint-import-resolver-typescript": "3.5.2",
    "eslint-plugin-import": "2.26.0",
    "eslint-plugin-jest": "27.1.3",
    "eslint-plugin-prettier": "4.2.1",
    "husky": "8.0.2",
    "jest": "29.2.1",
    "jest-chain": "1.1.6",
    "jest-extended": "3.1.0",
    "lint-staged": "13.0.3",
    "prettier": "2.7.1",
    "semantic-release": "19.0.5",
    "supertest": "6.3.0",
    "ts-jest": "29.0.3",
    "ts-node": "10.9.1",
    "typescript": "4.8.4"
  },
  "dependencies": {
    "@hapi/hapi": "^20.2.1",
    "bluebird": "^3.7.2",
    "globby": "^11.0.4",
    "lodash": "^4.17.21"
  },
  "packageManager": "yarn@3.2.4"
}
