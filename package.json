{
  "name": "stub-api-server",
  "version": "0.6.8",
  "description": "Stub REST api with fake JSON",
  "main": "dist/src/index.js",
  "types": "dist/src/index.d.ts",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/jgiovaresco/stub-api-server.git"
  },
  "scripts": {
    "build": "tsc",
    "lint": "yarn lint:eslint && yarn lint:commit && yarn lint:prettier",
    "lint:commit": "commitlint --from=$( git rev-list --tags --max-count=1 )",
    "lint:eslint": "eslint --ext ts .",
    "lint:prettier": "prettier -l {examples,src,test}/**/*",
    "lint:prettier:fix": "prettier --write {examples,src,test}/**/*",
    "prepublishOnly": "yarn build",
    "release": "semantic-release",
    "test": "jest --color --forceExit",
    "test:cov": "yarn test --coverage"
  },
  "commitlint": {
    "extends": [
      "@commitlint/config-conventional"
    ],
    "rules": {
      "body-max-line-length": [
        0
      ]
    }
  },
  "husky": {
    "hooks": {
      "commit-msg": "commitlint -E HUSKY_GIT_PARAMS",
      "pre-commit": "yarn build && lint-staged"
    }
  },
  "lint-staged": {
    "*.{ts}": [
      "yarn eslint --fix",
      "prettier --write"
    ],
    "*.{js,json,md}": [
      "prettier --write"
    ]
  },
  "devDependencies": {
    "@commitlint/cli": "^11.0.0",
    "@commitlint/config-conventional": "^11.0.0",
    "@semantic-release/changelog": "^5.0.1",
    "@semantic-release/commit-analyzer": "^8.0.1",
    "@semantic-release/git": "^9.0.0",
    "@semantic-release/github": "^7.1.1",
    "@semantic-release/npm": "^7.0.6",
    "@semantic-release/release-notes-generator": "^9.0.1",
    "@types/bluebird": "^3.5.32",
    "@types/chance": "^1.1.0",
    "@types/hapi__hapi": "^20.0.1",
    "@types/jest": "^26.0.14",
    "@types/lodash": "^4.14.161",
    "@types/supertest": "^2.0.10",
    "@typescript-eslint/eslint-plugin": "^4.4.0",
    "@typescript-eslint/parser": "^4.4.0",
    "chance": "^1.1.7",
    "conventional-changelog-conventionalcommits": "^4.4.0",
    "eslint": "^7.10.0",
    "eslint-config-prettier": "^6.12.0",
    "eslint-import-resolver-typescript": "^2.0.0",
    "eslint-plugin-import": "^2.22.1",
    "eslint-plugin-jest": "^24.1.0",
    "eslint-plugin-prettier": "^3.1.4",
    "husky": "^4.3.0",
    "jest": "^26.5.0",
    "jest-chain": "^1.1.5",
    "jest-extended": "^0.11.5",
    "lint-staged": "^10.4.0",
    "prettier": "^2.1.2",
    "semantic-release": "^17.1.2",
    "supertest": "^5.0.0",
    "ts-jest": "^26.4.1",
    "ts-node": "^9.0.0",
    "typescript": "^4.0.3"
  },
  "dependencies": {
    "@hapi/hapi": "^20.0.1",
    "bluebird": "^3.7.2",
    "globby": "^11.0.0",
    "lodash": "^4.17.15"
  }
}
