{
  "name": "stub-api-server",
  "version": "0.6.12",
  "description": "Stub REST api with fake JSON",
  "main": "dist/src/index.js",
  "types": "dist/src/index.d.ts",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/jgiovaresco/stub-api-server.git"
  },
  "scripts": {
    "build": "tsc",
    "lint": "yarn lint:eslint && yarn lint:commit && yarn lint:prettier",
    "lint:commit": "commitlint --from=$( git rev-list --tags --max-count=1 )",
    "lint:eslint": "eslint --ext ts .",
    "lint:prettier": "prettier -l {examples,src,test}/**/*",
    "lint:prettier:fix": "prettier --write {examples,src,test}/**/*",
    "prepublishOnly": "yarn build",
    "release": "semantic-release",
    "test": "jest --color --detectOpenHandles",
    "test:cov": "yarn test --coverage"
  },
  "commitlint": {
    "extends": [
      "@commitlint/config-conventional"
    ],
    "rules": {
      "body-max-line-length": [
        0
      ]
    }
  },
  "lint-staged": {
    "*.{ts}": [
      "yarn eslint --fix",
      "prettier --write"
    ],
    "*.{js,json,md}": [
      "prettier --write"
    ]
  },
  "devDependencies": {
    "@commitlint/cli": "16.2.3",
    "@commitlint/config-conventional": "16.2.1",
    "@semantic-release/changelog": "6.0.1",
    "@semantic-release/commit-analyzer": "9.0.2",
    "@semantic-release/git": "10.0.1",
    "@semantic-release/github": "8.0.2",
    "@semantic-release/npm": "8.0.3",
    "@semantic-release/release-notes-generator": "10.0.3",
    "@types/bluebird": "3.5.36",
    "@types/chance": "1.1.3",
    "@types/hapi__hapi": "20.0.10",
    "@types/jest": "27.4.0",
    "@types/lodash": "4.14.178",
    "@types/supertest": "2.0.11",
    "@typescript-eslint/eslint-plugin": "5.10.2",
    "@typescript-eslint/parser": "5.10.2",
    "chance": "1.1.8",
    "conventional-changelog-conventionalcommits": "4.6.3",
    "eslint": "8.8.0",
    "eslint-config-prettier": "8.3.0",
    "eslint-import-resolver-typescript": "2.5.0",
    "eslint-plugin-import": "2.25.4",
    "eslint-plugin-jest": "26.1.1",
    "eslint-plugin-prettier": "4.0.0",
    "husky": "7.0.4",
    "jest": "27.4.7",
    "jest-chain": "1.1.5",
    "jest-extended": "1.2.1",
    "lint-staged": "12.3.2",
    "prettier": "2.5.1",
    "semantic-release": "18.0.1",
    "supertest": "6.2.2",
    "ts-jest": "27.1.3",
    "ts-node": "10.4.0",
    "typescript": "4.5.5"
  },
  "dependencies": {
    "@hapi/hapi": "^20.2.1",
    "bluebird": "^3.7.2",
    "globby": "^11.0.4",
    "lodash": "^4.17.21"
  },
  "packageManager": "yarn@3.1.1"
}
